options {
        directory "/var/cache/bind";

        dnssec-validation no;
        auth-nxdomain yes;
        listen-on-v6 { any; };

        allow-transfer { any; };
        allow-query { any; };
        allow-recursion {"none";};
        recursion no;  
        empty-zones-enable no;
  
        hostname "tier2-ns.xuu.dn42";
};

include "/srv/etc/bind/dn42/tier2/named.conf";
